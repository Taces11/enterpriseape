<%= form_for [@invoice, @purchace] do |f| %>
 
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>
  
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
 
  <div class="actions">
  	<br>
    <%= f.submit %>
  </div>
  
<% end %>
